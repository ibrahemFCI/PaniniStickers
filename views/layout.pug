doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    link(rel='apple-touch-icon', sizes='180x180', href='favicon/apple-touch-icon.png')
    link(rel='icon', type='image/png', sizes='32x32', href='favicon/favicon-32x32.png')
    link(rel='icon', type='image/png', sizes='16x16', href='favicon/favicon-16x16.png')
    link(rel='manifest', href='favicon/site.webmanifest')
    link(rel='mask-icon', href='favicon/safari-pinned-tab.svg', color='#5bbad5')
    link(rel='shortcut icon', href='favicon/favicon.ico')
    meta(name='msapplication-TileColor', content='#ffffff')
    meta(name='msapplication-config', content='favicon/browserconfig.xml')
    meta(name='theme-color', content='#ffffff')
    title RUSSIA 2018
    // FONTS
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,700', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Cairo', rel='stylesheet')
    // CSS
    link(href='css/bootstrap.min.css', rel='stylesheet')
    link(href='css/datedropper.min.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body.inner
    header
      .v-center
        .col-sm-3.col-xs-6.toplogo
          img.logo.img-responsive(src='img/logo-en.png', alt='Logo')
        .col-sm-9.col-xs-6.rightTopNav
          .welcomeMsg
            p
              span.hidden-xs
                span.lblue Welcome,
                |  #{user.name}
                - var userid=user._id;
                input.input(type='hidden',id='userid',value=userid)
                input.input(type='hidden',id='username',value=user.name)
              a.logout(title='logout', href='/users/logout')
                span.lblue.glyphicon.glyphicon-off(aria-hidden='true')
          .mobMenu.hidden-sm.hidden-md.hidden-lg
            span.lone
            span.ltwo
            span.lthree
    section.main
      .col-sm-3.leftNav
        ul
          li
            a(href='/collection')
              span.icon.icon-collection
              |  Your collection
          li
            a(href='/doubles')
              span.icon.icon-doubles
              |  Your doubles
          li
            a(href='/trade')
              span.icon.icon-trade
              |  TRADE
      .col-sm-9.col-sm-offset-3.dashbord
            block content
            .container
              #chat_window_1.row.chat-window.col-xs-5.col-md-3(style='margin-left:10px;')

script(src='js/jquery.min.js')
script(src='js/bootstrap.min.js')
script(src='js/datedropper.min.js')
script(src='js/chart.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js')
script(src='js/client_socketio.js')
script(src='js/main.js')


       