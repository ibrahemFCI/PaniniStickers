doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags
    link(rel='apple-touch-icon', sizes='180x180', href='/favicon/apple-touch-icon.png')
    link(rel='icon', type='image/png', sizes='32x32', href='/favicon/favicon-32x32.png')
    link(rel='icon', type='image/png', sizes='16x16', href='/favicon/favicon-16x16.png')
    link(rel='manifest', href='/favicon/site.webmanifest')
    link(rel='mask-icon', href='/favicon/safari-pinned-tab.svg', color='#5bbad5')
    link(rel='shortcut icon', href='/favicon/favicon.ico')
    meta(name='msapplication-TileColor', content='#ffffff')
    meta(name='msapplication-config', content='favicon/browserconfig.xml')
    meta(name='theme-color', content='#ffffff')
    title RUSSIA 2018
    // FONTS
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,700', rel='stylesheet')
    // CSS
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/style.css', rel='stylesheet')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body.homepage
    .container
      .loginBox
        .col-sm-12
          img.loginLogo.img-responsive.center-block(src='/img/logo-en.png', alt='Logo')
          h1 Registration Form
        != messages('message', locals)
        if(errors)
            each error ,i in errors
                div(class="alert alert-danger") #{error.msg}
        form(action="/users/register", method="POST")
          .col-sm-6
            input.input(type='text', placeholder='Name', required='', name="name")
          .col-sm-6
            input.input(type='text', placeholder='Username', required='', name="username")
          .col-sm-6
            input.input(type='password', placeholder='Password', required='', name="password")
          .col-sm-6
            input.input(type='email', placeholder='Email', required='', name="email")
          .col-sm-6
            input.input(type='password', placeholder='Confirm Password:', required='', name="password2")
        
          .col-sm-12
            .submitgroup
              input.submitBtn(type="submit", value = "Register")


    // JavaScript plugins
    script(src='/js/jquery.min.js')
    script(src='/js/bootstrap.min.js')
    script(src='/js/main.js')
